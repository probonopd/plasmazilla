function build_framework
{ (
    # errors fatal
    echo "Compiler version:" $(g++ --version)
    set -e

    SRC=/kf5
    BUILD=/kf5/build
    PREFIX=/usr/

    # framework
    FRAMEWORK=$1

    # branch, optional parameter
    BRANCH=""
    if [[ $2 == "branch" ]];
    then
        BRANCH=$3
    fi

    # clone if not there
    mkdir -p $SRC
    cd $SRC
    if ( test -d $FRAMEWORK )
    then
        echo "$FRAMEWORK already cloned"
        cd $FRAMEWORK
        git reset --hard
        git pull --rebase
        cd ..
    else
        git clone git://anongit.kde.org/$FRAMEWORK
    fi

    if( test -n $BRANCH )
    then
        cd $FRAMEWORK
        git checkout $BRANCH
        cd ..
    fi

    # create build dir
    mkdir -p $BUILD/$FRAMEWORK

    # go there
    cd $BUILD/$FRAMEWORK

    # cmake it
    if [[ $2 == "branch" ]];
    then
        cmake $SRC/$FRAMEWORK -DCMAKE_INSTALL_PREFIX:PATH=$PREFIX $4 $5 $6 $7 $8 $9
    else
        cmake $SRC/$FRAMEWORK -DCMAKE_INSTALL_PREFIX:PATH=$PREFIX $2 $3 $4 $5 $6 $7
    fi

    # make
    make VERBOSE=1 -j8

    # install
    make install
) }
